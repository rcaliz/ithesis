<h1>Listing Thesis</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @theses.each do |thesis| %>
  <tr>
    <td><%= thesis.title %></td>
    <td><%= thesis.description %></td>
    <td><%= link_to 'Add Students', student_path(:thesis_id => thesis), :class => 'btn btn-small btn-success'  %></td>
    <td><%= link_to 'Show', thesis, :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_thesis_path(thesis), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', thesis, method: :delete, :class => 'btn btn-small', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

