<h3>Listing images</h3>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.title %></td>
    <td><%= image.image %></td>
    <td><%= image.description %></td>
    <td><%= link_to 'Show', image, :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_image_path(image), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', image, method: :delete, :class => 'btn btn-small', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Image', new_image_path, :class => 'btn btn-primary' %>
