<h1>Listing audios</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Title</th>
    <th>Audio</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @audios.each do |audio| %>
  <tr>
    <td><%= audio.title %></td>
    <td><%= audio.audio %></td>
    <td><%= audio.description %></td>
    <td><%= link_to 'Show', audio, :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_audio_path(audio), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', audio, method: :delete, :class => 'btn btn-small', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Audio', new_audio_path, :class => 'btn btn-primary' %>
