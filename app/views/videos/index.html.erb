<h1>Listing videos</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Title</th>
    <th>Video</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.title %></td>
    <td><%= video.video %></td>
    <td><%= video.description %></td>
    <td><%= link_to 'Show', video, :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_video_path(video), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', video, method: :delete, :class => 'btn btn-small', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Video', new_video_path, :class => 'btn btn-primary' %>
