<!DOCTYPE html>
<html>
<head>
  <title>AgileIbooks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class='navbar'>
		<div class="navbar-inner">
			<ul class='nav'>
			<% if current_user %>
				<li>
				<h4>
				Logged in as <%= current_user.username %>
				</h4>
				</li>
				<li>
				<%= link_to "Home", root_path %>
				</li>
				<li>
				<%= link_to "About us", root_path %>
				</li>
				<% if current_user.rol == 2 %>
					<li>
						<%= link_to "Reunions", reunions_path %>
					</li>
				<% end %>
				<li>
				<%= link_to "Images", images_path %>
				</li>
				<li>
				<%= link_to "Audios", audios_path %>
				</li>
				<li>
				<%= link_to "Videos", videos_path %>
				</li>
				<li>
				<%= link_to "Log out", logout_path %>
				</li>
			<% else %>
				<li>
				<%= link_to "Sign up", signup_path %>
				</li>
				<li>
				<%= link_to "log in", login_path %>
				</li>
				<li>
				<%= link_to "Home", root_path %>
				</li>
				<li>
				<%= link_to "About us", root_path %>
				</li>
			<% end %>
			</ul>
		</div>
	</nav>
	<div id="container">
		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
