<h1>Listing reunions</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Date</th>
    <th>Subject</th>
    <th>Duration</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reunions.each do |reunion| %>
  <tr>
    <td><%= reunion.date %></td>
    <td><%= reunion.subject %></td>
    <td><%= reunion.duration %></td>
    <td><%= reunion.place %></td>
    <td><%= link_to 'Add Artefact', artefacts_path(:reunion_id => reunion), :class => 'btn btn-small btn-success'  %></td>
    <td><%= link_to 'Add Compromises', compromises_path(:reunion_id => reunion), :class => 'btn btn-small btn-success'  %></td>
    <td><%= link_to 'Show', reunion, :class => 'btn btn-small'  %></td>
    <td><%= link_to 'Edit', edit_reunion_path(reunion), :class => 'btn btn-small'  %></td>
    <td><%= link_to 'Destroy', reunion, method: :delete, :class => 'btn btn-small', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Reunion', new_reunion_path, :class => 'btn btn-primary' %>
